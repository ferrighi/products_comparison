     $tile = $_GET["tile"];
  }else{
     $tile = $tiles_array[0];
  }

  if(isset($_GET["pr1"])){
     $pr1 = $_GET["pr1"];
  }else{
     $pr1 = "None";
  }

  if(isset($_GET["pr2"])){
     $pr2 = $_GET["pr2"];
  }else{
     $pr2 = "None";
  }

  if(isset($_GET["layer1"])){
     $layer1 = $_GET["layer1"];
  }else{
