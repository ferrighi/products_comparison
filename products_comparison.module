     $build_path1 = '"'.$address1.'"'; 
     $zoom = 7;
  }
  if ($pr2 !== 'None'){ 
     $build_path2 = '"'.$address2.'"'; 
     $zoom = 7;
     $ll = $latlon2;
  }
