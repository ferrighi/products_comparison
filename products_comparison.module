  $id_j1 = '"'.$pr1.'"';
  $id_j2 = '"'.$pr2.'"';

  $ly_j1 = '"'.$layer1.'"';
  $ly_j2 = '"'.$layer2.'"';
  
  $sn_j = '"'.$site_name.'"';

return $out . '

